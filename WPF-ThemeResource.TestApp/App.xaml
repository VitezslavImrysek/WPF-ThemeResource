<Application x:Class="WPF_ThemeResource.TestApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_ThemeResource.TestApp"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionaryEx>
            <ResourceDictionaryEx.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/WPF-ThemeResource;component/Themes/Common.xaml" />
                <ResourceDictionary Source="pack://application:,,,/WPF-ThemeResource;component/Themes/Accent.xaml" />
            </ResourceDictionaryEx.MergedDictionaries>

            <ResourceDictionaryEx.ThemeDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary x:Key="Dark" Source="pack://application:,,,/WPF-ThemeResource;component/Themes/Dark.xaml" />
                    <ResourceDictionary x:Key="Light" Source="pack://application:,,,/WPF-ThemeResource;component/Themes/Light.xaml" />
                </ResourceDictionary>
            </ResourceDictionaryEx.ThemeDictionaries>

            <SolidColorBrush x:Key="purpleColor" Color="Purple" />
        </ResourceDictionaryEx>
    </Application.Resources>
</Application>
