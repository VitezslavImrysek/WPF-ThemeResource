<Application x:Class="WPF_ThemeResource.TestApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ApplicationThemeResourceDictionary RequestedTheme="Light" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="purpleColor" Color="Purple" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
